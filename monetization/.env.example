# API Keys
MCP_API_KEY=your_mcp_api_key_here
GOAT_API_KEY=your_goat_api_key_here

# Endpoints
MCP_ENDPOINT=https://api.mcp.example.com
GOAT_ENDPOINT=https://api.goat.example.com

# Network Configuration
NETWORK_TYPE=mesh
MAX_NODES=10
MIN_PERFORMANCE=0.7

# Analytics Configuration
TIME_SERIES_WINDOW=30
FORECAST_HORIZON=7
CONFIDENCE_THRESHOLD=0.8

# Edge Computing
RESOURCE_TYPES=cpu,gpu,memory,network
OPTIMIZATION_INTERVAL=300

# Forecasting
MODEL_TYPE=lstm
SEQUENCE_LENGTH=24
PREDICTION_WINDOW=7
UPDATE_FREQUENCY=3600

# Trading Parameters
INITIAL_CAPITAL=3
TARGET_AMOUNT=1000
TIMEFRAME=30
MAX_TRADES_PER_HOUR=10
MIN_PROFIT_THRESHOLD=0.5
MAX_POSITION_SIZE=0.2
STOP_LOSS=0.02
TAKE_PROFIT=0.05 